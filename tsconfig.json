{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2022"],
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "removeComments": false,
    "declaration": true
  },
  "exclude": ["node_modules","**/__tests__/**"],
  "include": ["src"]
}
